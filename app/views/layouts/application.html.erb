<!DOCTYPE html>
<html>
  <head>
    <title>RailsPantry050121</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user  %>
      <%= link_to 'All Items', items_path %> 
      <%= link_to 'New Item', new_item_path %>
      <%= link_to 'New Measurement', new_measurement_path %>
      <%= link_to 'All Measurements', measurements_path %>
      <%= link_to 'My Items', user_items_path(current_user) %>
      <%= button_to 'Log Out', logout_path, method: :post %>
    <% else %>
      <%= link_to 'Log In', login_path %>
      <%= link_to 'Sign Up', signup_path %>
    <% end %>

    <%= yield %>

  </body>
    
</html>
